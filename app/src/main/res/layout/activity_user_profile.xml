<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.skru_dane_po_warszawsku.activities.UserProfileActivity">

    <Button
        android:id="@+id/backToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backToMain"
        android:text="Back"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="383dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/phone_number" />

    <Button
        android:id="@+id/saveProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="381dp"
        android:layout_alignBaseline="@+id/backToMain"
        android:layout_alignBottom="@+id/backToMain"
        android:layout_alignStart="@+id/phone_number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uzupełnij swój  profil, aby dać służbom więcej informacji przy zgłoszeniu"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Imię"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="93dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nazwisko"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="159dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/last_name"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="mail@mail.com"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mail"
        android:layout_below="@+id/mail"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone"
        android:text="111222333"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="307dp" />

</android.widget.RelativeLayout>
